{
  "configurations": [
    {
      "type": "debugpy",
      "request": "launch",
      "name": "Launch Backend FastAPI App",
      "module": "uvicorn",
      "args": [
        "src.main:app",
        "--host", "0.0.0.0",
        "--port", "8000",
        "--reload"
      ],
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "DATABASE_URL": "postgresql+psycopg://test_user:test_password@localhost:5432/car_charging",
        "PYTHONPATH": "${workspaceFolder}/backend"
      },
      "console": "integratedTerminal",
      "preLaunchTask": "setup-environment"
    }
  ]
}