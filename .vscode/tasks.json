{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "setup-environment",
      "type": "shell",
      "dependsOrder": "sequence",
      "dependsOn": [
        "start-database",
        "run-migrations"
      ],
      "group": "build"
    },
    {
      "label": "start-database",
      "type": "shell",
      "command": "docker",
      "args": ["compose", "up", "-d", "database"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "run-migrations",
      "type": "shell",
      "command": "uv",
      "args": ["run", "alembic", "upgrade", "head"],
      "options": {
        "cwd": "${workspaceFolder}/backend",
        "env": {
            "DATABASE_URL": "postgresql+psycopg://test_user:test_password@localhost:5432/car_charging"
        }
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "dependsOn": "wait-for-database"
    },
    {
      "label": "wait-for-database",
      "type": "shell",
      "command": "sleep",
      "args": ["3"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent"
      }
    },
    {
      "label": "docker-compose-down",
      "type": "shell",
      "command": "docker",
      "args": ["compose", "down"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build"
    },
    {
      "label": "create-migration",
      "type": "shell",
      "command": "uv",
      "args": ["run", "alembic", "revision", "--autogenerate", "-m", "${input:migrationMessage}"],
      "options": {
        "cwd": "${workspaceFolder}/backend",
        "env": {
            "DATABASE_URL": "postgresql+psycopg://test_user:test_password@localhost:5432/car_charging"
        }
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always"
      }
    }
  ],
  "inputs": [
    {
      "id": "migrationMessage",
      "description": "Migration message",
      "default": "Auto-generated migration",
      "type": "promptString"
    }
  ]
}